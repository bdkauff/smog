	script.
			$(document).ready(function(){
				$(".span6").each(function(index, el){ 
					var audioEl = $(el).find("audio");
					if (audioEl.length > 0){
						$(el).hover(function(){
							audioEl[0].play();
						},
						function(){
							audioEl[0].pause();
						});
					}
				});
			});

